<h1>Current Users</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Username</th>
    <th>Password</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.id %></td>
    <td><%=h user.user_name %></td>
    <td><%=h user.password %></td> 
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => 
:delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to "Back", :controller => 'user', :action => 'private' %>
