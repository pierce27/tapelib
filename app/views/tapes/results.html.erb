<% content_for :title, "Search Results" %>


<h1>Your Results</h1>

<p>
  <b> Number of Tapes: </b>
  <%= @tapes.size %><br/> 
</p>

<table>
  <tr>
    <th></th>
    <th>Voltag</th>
    <th></th>
    <th>Tape Label</th>
    <th></th>
    <th>Backup Format</th>
    <th></th>
    <th>Revision</th>
    <th></th>
    <th>Size</th>
    <th></th>
    <th> Backupsets</th>
  </tr>




<% @tapes.each do |tape| %>
  <tr>
    <% vol = tape.voltag %>
    <% i = 0 %>

    <!Calculating size of tape and # of bsets >
    <%  @backupsets.each do  |b| %>
    <%   if vol == b.voltag %>
    <%   i = i + 1  %>
    <%   end %>
    <%  end  %>
    
   <td> <%= link_to 'Save', :voltag => tape.voltag, :controller => 'saved_tapes' %></td>
    <td><%=h tape.voltag %></td>
    <td>- -</td>
    <td><%=h tape.tapelabel %></td>
    <td>------</td>
    <td><%=h tape.bformat %></td>
    <td></td>
    <td><%=h tape.rev %></td>
    <td>------</td>
    <td><%=h number_to_human_size(tape.size) %></td>
    <td>------</td>
    <td><%=h i %></td>
    <td><%= link_to 'Details', :voltag => tape.voltag, :controller => 'saved_tapes', :action => :yourtape %></td>
    <td><%= link_to 'Edit', :id => tape.id, :action => 'edittape' %></td>
    <td><%= link_to 'Destroy', tape, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


<!hr/>
<!%= will_paginate @tapes %>
<!hr/>




