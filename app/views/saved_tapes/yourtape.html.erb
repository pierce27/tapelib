<h1><%= params[:voltag] %></h1>
<h1><%= button_to ('Playback', "http://192.168.192.111:3000/Playbacks/#{params[:bformat]}/#{params[:voltag]}") %></h1>


<table>
  <tr>
    <th>Voltag</th>
    <th>Tape Label</th>
    <th> Backupsets</th>
    <th>Server</th>
    <th>Backup Format</th>
    <th>Revision</th>
    <th>Backup Type</th>
    <th>Client Type</th>
    <th>Server Type</th>
  </tr>

<% vol = 0 %>
<% tlabel = 0 %>

<% @yourtapes.each do |tape| %>
  <tr>
    <td>
    <% if tape.voltag != vol %>
    <%=h tape.voltag %>
    <% end %>
    </td>
    <td>
    <% if tape.tapelabel != tlabel %>
    <%=h tape.tapelabel %>
    <% end %>
    </td>
    <td><%=h tape.bsid %></td>
    <td><%=h tape.server %></td>
    <td><%=h tape.bformat %></td>
    <td><%=h tape.rev %></td>
    <td><%=h tape.btype %></td>
    <td><%=h tape.bclient %></td>
    <td><%=h tape.servertype %></td>
    
    <td><%= button_to 'Edit', edit_tape_path(tape) %></td>
    <td><%= button_to 'Destroy', tape, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% vol = tape.voltag %>
<% tlabel = tape.tapelabel %>
<% end %>
</table>


<!hr/>
<!%= will_paginate @tapes %>
<!hr/>


