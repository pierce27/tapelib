<h1>Listing tapes</h1>

<table>
  <tr>
    <th> Tape ID </th>
    <th> bsid</th>
    <th>Server</th>
    <th>Bformat</th>
    <th>Btype</th>
    <th>Client</th>
    <th>Tapelabel</th>
    <th>Voltag</th>
    <th>Size</th>
    <th>Revision</th>
    <th>Test Case</th>
  </tr>

<% @tapes.each do |tape| %>
  <tr>
    <td><%=h tape.id %></td>
    <td><%=h tape. bsid %></td>
    <td><%=h tape.server %></td>
    <td><%=h tape.bformat %></td>
    <td><%=h tape.btype %></td>
    <td><%=h tape.bclient %></td>
    <td><%=h tape.tapelabel %></td>
    <td><%=h tape.voltag %></td>
    <td><%=h tape.size %></td>
    <td><%=h tape.rev %></td>
    <td><%=if tape.testcase != 0 then link_to (tape.testcase, "http://kama.tworiverlabs.com/bugs/tr_show_case.cgi?case_id=#{tape.testcase}") else "none" end %></td>
    <td><%= link_to 'Show', tape %></td>
    <td><%= link_to 'Edit', edit_tape_path(tape) %></td>
    <td><%= link_to 'Destroy', tape, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<hr/>
<%= will_paginate @tapes %>
